<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:orientation="vertical">

    <!-- AppBar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tarjeta superior (Encabezado de la rutina) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/header_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rutina recomendada"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Basada en tu nivel: principiante"
                        android:textColor="#FFFFFFCC"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Duración estimada: 45 minutos"
                        android:textColor="#FFFFFFCC"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Lista de ejercicios -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_ejercicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Botones inferiores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Botón principal: Comenzar rutina -->
                <Button
                    android:id="@+id/btn_comenzar_rutina"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:text="Comenzar rutina"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_play"
                    android:drawablePadding="8dp"
                    android:background="@drawable/gradient_button_green_blue" />

                <!-- Botón secundario: Personalizar rutina -->
                <Button
                    android:id="@+id/btn_personalizar_rutina"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Personalizar rutina"
                    android:textColor="#111827"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_edit"
                    android:drawablePadding="8dp"
                    android:background="@drawable/button_white_border" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
